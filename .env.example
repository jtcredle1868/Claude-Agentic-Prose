ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///prose.db

# ── Obsidian AI Agent ────────────────────────────────────────────────
# Google Drive service account credentials JSON file
GOOGLE_CREDENTIALS_FILE=credentials/google_service_account.json
# The ID of the Google Drive folder to watch (from the folder URL)
GDRIVE_FOLDER_ID=your-drive-folder-id
# Local directory to stage downloaded files before processing
GDRIVE_STAGING_DIR=staging/gdrive_inbox
# Poll interval in seconds
GDRIVE_POLL_INTERVAL=60

# Absolute path to your Obsidian vault
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
# Sub-folder for new ingested notes (created automatically)
OBSIDIAN_INBOX_FOLDER=Inbox
# Sub-folder for agent-generated reports
OBSIDIAN_AGENT_FOLDER=AgentReports

# Notion integration (for monthly project export)
NOTION_API_KEY=your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id
# Day of month to run the Notion dump (1-28)
NOTION_DUMP_DAY=1

# Perplexity API key (optional — agent falls back to Claude)
PERPLEXITY_API_KEY=

# Comma-separated consulting domains for research scoping
CONSULTING_DOMAINS=technology,business strategy,innovation,education

# Agent tuning
TAG_CONFIDENCE_THRESHOLD=0.7
LINK_RELEVANCE_THRESHOLD=0.6
LOG_LEVEL=INFO
